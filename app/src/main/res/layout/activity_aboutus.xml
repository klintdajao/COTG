<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#531E23"
    tools:context=".AboutUs">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="395dp"
        android:layout_height="184dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="500px"
            android:layout_height="500px"
            app:srcCompat="@drawable/hello" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtpassword"
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:text="About The Team"
            android:textColor="#531E23"
            android:textSize="34sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="363dp"
        android:layout_height="379dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.271">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="80px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:background="#FFCC33"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/gemarlo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="262dp"
                        android:layout_height="wrap_content"
                        android:text="Gemarlo Aquillo"
                        android:textColor="#531E23"
                        android:textSize="50px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtlogin"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Taga kaon ug pancit canton nga giluto ni Reynald nga giremind ni Klint namo"
                        android:textColor="#531E23"
                        android:textSize="40px" />
                </LinearLayout>

                <Space
                    android:layout_width="20px"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:background="#FFCC33"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="134dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/klint" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="262dp"
                        android:layout_height="wrap_content"
                        android:text="Klint Dajao"
                        android:textColor="#531E23"
                        android:textSize="50px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="177dp"
                        android:layout_weight="1"
                        android:text="Tig remind sa mga ka group na luto na ang pancit canton pero pasar ,man sad."
                        android:textColor="#531E23"
                        android:textSize="40px" />
                </LinearLayout>

                <Space
                    android:layout_width="20px"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:background="#FFCC33"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/romel" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="262dp"
                        android:layout_height="wrap_content"
                        android:text="Romel Recabo"
                        android:textColor="#531E23"
                        android:textSize="50px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Romel's role is focused on hardware getups and application stability. His work gave his team morale to fix bugs and find errors with minimal effort."
                        android:textColor="#531E23"
                        android:textSize="40px" />
                </LinearLayout>

                <Space
                    android:layout_width="20px"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:background="#FFCC33"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/sean" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="262dp"
                        android:layout_height="wrap_content"
                        android:text="Sean Saligue"
                        android:textColor="#531E23"
                        android:textSize="50px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sean is an aspiring developer in Android and other platforms. His wide knowledge is always valuable in the team."
                        android:textColor="#531E23"
                        android:textSize="40px" />
                </LinearLayout>

                <Space
                    android:layout_width="20px"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:background="#FFCC33"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/bo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="262dp"
                        android:layout_height="wrap_content"
                        android:text="Reynald Sampelo"
                        android:textColor="#531E23"
                        android:textSize="50px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tig luto pancit canton ug tig hilot sa groupmates "
                        android:textColor="#531E23"
                        android:textSize="40px" />
                </LinearLayout>

                <Space
                    android:layout_width="20px"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button"
                    android:gravity="center"
                    android:text="Back"
                    android:textColor="#531E23"
                    android:textSize="20sp"
                    app:backgroundTint="#FFCC33"
                    app:icon="@drawable/ic_baseline_arrow_back_24"
                    app:iconTint="#531E23" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50px" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>