<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#531E23"
    tools:context=".LandingPage">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="1171dp"
        android:layout_height="1904dp"
        android:alpha="0.2"
        android:background="#00FFFFFF"
        android:src="@drawable/claw"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="392dp"
        android:layout_height="622dp"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="95dp"
                        android:layout_height="89dp"
                        android:layout_marginTop="28dp"
                        app:srcCompat="@drawable/hello" />

                    <LinearLayout
                        android:layout_width="276dp"
                        android:layout_height="118dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/wildcats"
                            android:layout_width="262dp"
                            android:layout_height="69dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="82dp"
                            android:layout_marginRight="82dp"
                            android:text="Wildcats"
                            android:textAlignment="center"
                            android:textColor="#ffcc33"
                            android:textSize="60sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/canteen"
                            android:layout_width="247dp"
                            android:layout_height="42dp"
                            android:paddingTop="0dp"
                            android:text="Canteen-on-the-Go"
                            android:textAlignment="center"
                            android:textColor="#ffcc33"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:layout_gravity="center|center_horizontal"
                        android:gravity="center"
                        android:text="Account Registration"
                        android:textColor="#F6F6F6"
                        android:textSize="24sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="674dp"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25px"
                    android:text="ID Number"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtIdNum"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:background="@drawable/custom_input"
                    android:ems="10"
                    android:hint="xx-xxxx-xxx"
                    android:inputType="textPersonName"
                    android:paddingLeft="25px"
                    android:paddingRight="35px"
                    android:textColor="#000000" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25px"
                    android:text="Email"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:background="@drawable/custom_input"
                    android:ems="10"
                    android:hint="e.g. juandelacruz@cit.edu"
                    android:inputType="textPersonName"
                    android:paddingLeft="25px"
                    android:paddingRight="35px"
                    android:textColor="#000000" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25px"
                    android:text="First Name"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtFName"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:background="@drawable/custom_input"
                    android:ems="10"
                    android:hint="Juan"
                    android:inputType="textPersonName"
                    android:paddingLeft="25px"
                    android:paddingRight="35px"
                    android:textColor="#000000" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25px"
                    android:text="Middle Name"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtMName"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:background="@drawable/custom_input"
                    android:ems="10"
                    android:hint="Dela"
                    android:inputType="textPersonName"
                    android:paddingLeft="25px"
                    android:paddingRight="35px"
                    android:textColor="#000000" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25px"
                    android:text="Last Name"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtLName"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:background="@drawable/custom_input"
                    android:ems="10"
                    android:hint="Cruz"
                    android:inputType="textPersonName"
                    android:paddingLeft="25px"
                    android:paddingRight="35px"
                    android:textColor="#000000" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25px"
                    android:text="Password"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@drawable/custom_input"
                    android:ems="10"
                    android:hint="Enter password..."
                    android:inputType="textPassword"
                    android:paddingLeft="25px"
                    android:paddingRight="35px" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25px"
                    android:text="Confirm Password"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtConfPass"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@drawable/custom_input"
                    android:ems="10"
                    android:hint="Confirm your password..."
                    android:inputType="textPassword"
                    android:paddingLeft="25px"
                    android:paddingRight="35px" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"></LinearLayout>

                    <Button
                        android:id="@+id/btnRegister"
                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:text="Confirm"
                        android:textColor="#531E23"
                        app:backgroundTint="#FFCC33"
                        app:cornerRadius="100px" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/btnContactUs"
        android:layout_width="57dp"
        android:layout_height="41dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAboutUs"
        app:srcCompat="@drawable/ic_baseline_contact_phone_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btnAboutUs"
        android:layout_width="45dp"
        android:layout_height="41dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_info_24"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>